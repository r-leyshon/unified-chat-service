{
  "name": "unified-chat-monorepo",
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev -w apps/unified-chat-service",
    "dev:pomodoro": "npm run dev -w apps/minimal-pomodoro",
    "dev:unit-converter": "npm run dev -w apps/unit-converter",
    "dev:tip-calculator": "npm run dev -w apps/tip-calculator"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "baseline-browser-mapping": "^2.9.19"
  },
  "main": "./packages/unified-chat/dist/index.js",
  "types": "./packages/unified-chat/dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./packages/unified-chat/dist/index.d.ts",
      "import": "./packages/unified-chat/dist/index.mjs",
      "require": "./packages/unified-chat/dist/index.js"
    }
  }
}